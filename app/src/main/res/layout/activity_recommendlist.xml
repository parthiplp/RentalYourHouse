<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/rehouseimage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/homeimg"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/reprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 4000 - 5000"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/rehouseaddress"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="5361 Augusta Drive Frederick,MD 21710"/>
                <TextView
                    android:id="@+id/rehousedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="1200 Sqft -Villa"/>

                    <TextView
                        android:id="@+id/rehousestatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="Ready to Move"/>


            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:text="DETAILS"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>